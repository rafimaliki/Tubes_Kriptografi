{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --legacy-watch --polling-interval 1000 --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:setup": "npm run db:generate && npm run db:push",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:clear": "tsx src/scripts/clear.ts"
  },
  "nodemon": {
    "watch": [
      "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "node_modules",
      "dist"
    ],
    "exec": "tsx src/index.ts",
    "env": {
      "NODE_ENV": "development"
    },
    "legacyWatch": true,
    "polling": true
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "drizzle-kit": "^0.20.6",
    "nodemon": "^3.0.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}
